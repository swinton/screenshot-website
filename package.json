{
  "name": "screenshot-url",
  "version": "1.0.1",
  "description": "",
  "author": "Steve Winton <stevewinton@gmail.com> (https://github.com/swinton)",
  "main": "index.js",
  "license": "ISC",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swinton/screenshot-url.git"
  },
  "scripts": {
    "start": "node ./index.js",
    "dev": "nodemon",
    "test": "jest && eslint {index.js,lib/**/*.js,test/**/*.js}",
    "lint": "eslint index.js {index.js,lib/**/*.js,test/**/*.js} --fix",
    "build": "npm run package",
    "package": "ncc build index.js -o dist",
    "pre-commit": "npm run package && git add dist/index.js"
  },
  "dependencies": {
    "@actions/artifact": "^0.1.0",
    "@actions/core": "^1.10.0",
    "bunyan": "^1.8.12",
    "bunyan-format": "^0.2.1",
    "capture-website": "^0.8.1",
    "dotenv": "^16.3.1",
    "js-yaml": "^4.1.0",
    "puppeteer": "^13.7.0"
  },
  "devDependencies": {
    "@zeit/ncc": "^0.22.3",
    "eslint": "^8.52.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.4.3",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "index.js",
      "lib/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  }
}
